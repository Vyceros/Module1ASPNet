@page
@model ITStepRazorApp.Pages.OrderPageModel
@{
    ViewData["Title"] = "Order";
}

<div class="container pt-4">
    <div class="row">
        <div class="col-12 px-4">
            <h1>Put order details below</h1>
            <hr class="mt-1" />
        </div>
        <div class="row mt-3 mx-4">
            <div class="col-12">
                <div data-mdb-input-init class="form-outline">
                    <input type="text" placeholder="Name your Pizza"
                        class="form-control order-form-input" asp-for="@Model.Pizza.Name" />
                </div>
                <div data-mdb-input-init class="form-outline">
                    <input type="checkbox" class="active form-check px-10" placeholder="Make it large"asp-for="@Model.Pizza.IsLarge" />
                </div>
            </div>
        </div>



    </div>
</div>
